#include <iostream>
#include <conio.h>
using namespace std;

 int multiplicar(int a, int b)
{
	int r=0,i;
	for(i=1;i<=b;i++)
	{r=r+a;
	}

	return(r);
}

 int dividir(int a, int b)  
 {
	 int r=0;
		 while(a>0){
			 a=a-b;
		 r++;
 }
		 return(r);
	
 }

 int fact(int a, int b)
	 int b=1,i;
	 for(i=1;i<a;i++)
		 b=b*i;

	 void main()
	 {
		 int x,z;
		 do
	{
	cout<< "Introducir un numero:";
	cin>> x;
	}
	while (x<0);
	z=factorial(x);
	cout<<"el factorial es:"; <<z;

void main()
{
	int x,y,z;
	do{
	do
	{
	cout<< "Introducir un numero:";
	cin>> x;
	}
	while (x<0);
	do
	{
	cout<< "Introducir otro numero:";
	cin>> y;
	}
	while (y<0);
	}

	if(x%y!=0);{
		cout<<"no es divisible";
	}
	else{
	z=dividir(x,y);
	}
	cout<< "La division es: ";
	cout<<z;
