// Menu y Validaciones (Taller 2).cpp : main project file.

#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include <stdlib.h>

using namespace std;

void main()

{
	int n, suma, i, con;
	char opcion;
	system("color 8");
	do
	{
	cout<< "             MENU\n\n ";
	cout<< "1) Suma de pares hasta N.\n\n ";
	cout<< "2) Suma de los primeros numeros pares.\n\n ";
	cout<< "3) suma de los primos N pares (Do, While.\n\n ";
	cout<< "0) Salir.\n\n ";
	cout<<"Ingrese la opcion deseada:\n\n ";
	cin>>opcion;
		switch (opcion)	
		{
			case '1':
				cout<< "\nIngrese el numero: \n\n ";
				cin>> n;
				suma=0;
				for(i=1; i<=n; i=i+2)
				{
				suma=suma+i;
				}
				cout<<"\nLa sumatoria es: \n\n ";
				cout<<suma;
					getch();
					system("cls");
				break;

			case '2':
				cout<<"\ningrese la cantidad: \n\n ";
				cin>>n;
				suma=0;
				con=1;
				for(i=1;i<=n;i++)
				{
				suma=suma+con;
				con=con+2;
				}
				cout<<"\nla sumatoria es: \n\n ";
				cout<<suma;
					getch();
					system("cls");
				break;

			case '3':
				cout<<"\nIngrese la cantidad: \n\n";
				cin>>n;
				suma=0;
				while
					(n>0)
						for(i=1;i<=n;i=i+2)
							suma=suma+i;
					cout<<"\nla sumatoria es igual a: \n\n";
					cout<<suma;
				getch();
				system("cls");
				break;

			case '4':
				system("cls");
				break;
				

				default: cout<<"Opcion mal ingresada.\n\n"; 
		}
	}

	while (n>0);

system("pause"); 
}
